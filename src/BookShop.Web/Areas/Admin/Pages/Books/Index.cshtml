@page
@model BookShop.Web.Areas.Admin.Pages.Books.IndexModel
@{
}

<div>
    <h3>
        Books
    </h3>
    <hr />
   
    <a asp-area="Admin" asp-page="/Books/Create" class="btn btn-primary">
        Add a New Book
    </a>
     
    <table>
        <thead>
            <tr>
                <th>Name</th>
                 
                <th>Price</th>
                <th></th>

                <th>
                    Image
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model.BookList)
            {
                <tr>
                    <td>@book.Name</td>
                     
                    <td>@book.Price.ToString("C")</td>

                    <td>
                         <a asp-page="./details" asp-route-bookid="@book.Id" class="btn btn-info">Details</a>
                    </td>
                </tr>


            }
        </tbody>
    </table>
</div>
